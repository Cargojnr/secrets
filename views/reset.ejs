    <div class="container mt-5">
        <div class="hero">
            <i class="fas fa-key fa-7x"></i>
            <h1>Reset Password</h1>
            <p>Reset your password. Protect your secrets</p>
            <% if (locals.foundUser) { %>
                <div class="form-container">
                    <h2>@<%= foundUser.username %></h2>
                    <form action="/reset" method="POST" id="reset">
                        <input type="hidden" name="id" value="<%= foundUser.id %>">
                        <div class="form-group">
                            <label for="new-password">Set a New Password</label> 
                            <input type="password" name="newPassword" class="form-control" placeholder="">
                        </div>
                        <div class="form-group">
                            <label for="confirm-password">Confirm password</label> 
                            <input type="password" name="confirmPassword" class="form-control" placeholder="">
                            <% if (locals.message) { %>
                                <p style="color: red; font-style: italic;"><%= message %></p>
                            <% } %>
                        </div>
                        <button type="submit" class="btn btn-dark secret-btn">Reset</button>
                    </form>
                </div>     
            <% } else { %>
                <div class="form-container">
                    <form action="/search" method="POST" id="reset">
                        <div class="form-group">
                            <label for="search-account">Search for your Account</label> 
                            <input type="text" name="findAccount" class="form-control" placeholder="Enter your Email">
                            <% if (locals.message) { %>
                                <p style="color: green; margin-top: .2rem;"><%= message %></p>
                            <% } %>
                            <button type="submit" class="btn btn-dark secret-btn">Search</button>
                        </div>
                       </form>
                </div>
          <% } %>
        </div>                   
    </div>

