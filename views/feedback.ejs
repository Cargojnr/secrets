<%- include('layout') %>

<style>
    @import url("https://fonts.googleapis.com/css?family=Roboto:400,300");

    #rating {
        display: flex;
        align-items: center;
        gap: 10px;
    }

.rating{
    position: relative;
}

.rating input[type="radio"] {
    opacity: 0;
    width: 25px;
    height: 25px;
    position: absolute;
    top: 0;
    left: 0;
    right : 0;
    bottom: 0;
    z-index: 1;
    cursor: pointer;
}

input[type="radio"]:checked + label span {
    transform:scale(1.25);
    color: gold !important;
}



 .rating label {
  display: inline-block;
  width: 25px;
  height: 25px;
  margin-right: 10px;
  cursor: pointer;
}

 .rating label:hover span {
    transform: scale(1.25);
    color: gold;
}

.rating label span {
    display: block;
    width: 100%;
    height: 100%;
    transition: transform 0.2s ease-in-out;
    cursor: pointer;
}

</style>

<body data-theme="<%= theme %>" data-mode="<%= mode %>">
    <div class="jumbotron text-center">
        <div class="container">
            <form action="/review" method="post" class="form-container">
                 
                <center><h2>Submit Your Reviews of Our Application</h2></center>

                <div class="form-group">
                    <label for="review">Review</label>
                    <input type="text" name="review" placeholder="Enter your review" class="form-control">
                </div>

                <div class="form-group">
                    <p>Select a rating from 1-5</p>
                    <div id="rating">

                        <div class="rating">
                            <input name="rating" type="radio" value="1">
                            <label for="1"><span class="one"><i class="fas fa-star"></i></span></label>
                        </div>

                        <div class="rating">
                            <input name="rating" type="radio" value="2">
                            <label for="2"><span class="one"><i class="fas fa-star"></i></span></label>
                        </div>

                        <div class="rating">
                            <input name="rating" type="radio" value="3">
                            <label for="3"><span class="one"><i class="fas fa-star"></i></span></label>
                        </div>

                        <div class="rating">
                            <input name="rating" type="radio" value="4">
                            <label for="4"><span class="one"><i class="fas fa-star"></i></span></label>
                        </div>

                        <div class="rating">
                            <input name="rating" type="radio" value="5">
                            <label for="5"><span class="one"><i class="fas fa-star"></i></span></label>
                        </div>

                </div>
                </div>
                
                <div class="form-group">
                    <label for="review">Suggest new ideas </label>
                    <input type="text" name="idea" placeholder="Enter your ideas" class="form-control">
                </div>
 
                <button class="btn" id="generate">Submit Review</button>
            </form>
        </div>
    </div>

</body>

<script src="/js/app.js"></script>
<script src="/js/tutorial.js"></script>
  <% if (locals.theme) { %>
    <script src="/js/theme.js"></script>
  <% } else {%>
    <script src="/js/defaultTheme.js"></script>
    <% } %>